<%= form_for(@rubyq, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @rubyq.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@rubyq.errors.count, "error") %> prohibited this rubyq from being saved:</h4>

      <ul>
      <% @rubyq.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :prompt_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :prompt_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :group_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :group_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :prompt1, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :prompt1, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :prompt2, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :prompt2, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :answer, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :answer, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :linear, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :linear, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
